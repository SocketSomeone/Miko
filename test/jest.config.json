{
	"preset": "ts-jest",
	"name": "miko-monorepo",
	"rootDir": "../",
	"clearMocks": true,
	"coverageDirectory": "coverage",
	"collectCoverageFrom": [
		"{apps,packages,tools}/*/src/**/*.ts"
	],
	"coveragePathIgnorePatterns": [
		"/node_modules/",
		"types\\.ts",
		"index\\.ts",
		".+\\.d\\.ts"
	],
	"testMatch": [
		"**/{apps,packages,tools}/*/test/**/*.test.ts"
	],
	"moduleFileExtensions": [
		"ts",
		"tsx",
		"js"
	],
	"setupFilesAfterEnv": [
		"<rootDir>/test/jest.setup.ts"
	],
	"testEnvironment": "node",
	"transform": {
		"^.+\\.tsx?$": "ts-jest"
	},
	"verbose": true
}
