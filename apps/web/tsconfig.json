{
	"compilerOptions": {
		"target": "ES2018",
		"module": "ESNext",
		"moduleResolution": "Node",
		"lib": [
			"ESNext",
			"ESNext.AsyncIterable",
			"DOM"
		],
		"esModuleInterop": true,
		"allowJs": true,
		"sourceMap": true,
		"strict": true,
		"noEmit": true,
		"experimentalDecorators": true,
		"suppressImplicitAnyIndexErrors": true,
		"baseUrl": ".",
		"paths": {
			"~/*": [
				"app/*"
			],
			"@/*": [
				"app/*"
			]
		},
		"types": [
			"@types/node",
			"nuxt-i18n",
			"@nuxt/types",
			"@nuxtjs/axios",
			"@nuxtjs/toast",
			"@nuxtjs/moment",
			"@nuxtjs/auth-next",
			"@nuxtjs/sentry",
		]
	},
	"exclude": [
		"node_modules",
		".nuxt",
		"dist"
	]
}
