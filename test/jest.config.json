{
	"preset": "ts-jest",
	"name": "miko-monorepo",
	"rootDir": "../",
	"testEnvironment": "node",
	"testMatch": [
		"**/{apps,packages}/*/test/**/*.(spec|test).ts"
	],
	"clearMocks": true,
	"collectCoverage": true,
	"collectCoverageFrom": [
		"{apps,packages}/*/src/**/*.ts"
	],
	"coverageDirectory": "coverage",
	"coveragePathIgnorePatterns": [
		"/node_modules/",
		"types\\.ts",
		"index\\.ts",
		".+\\.d\\.ts"
	],
	"setupFilesAfterEnv": ["<rootDir>/test/jest.setup.ts"],
	"verbose": true
}
