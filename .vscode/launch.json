{
	// Use IntelliSense to learn about possible attributes.
	// Hover to view descriptions of existing attributes.
	// For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
	"version": "0.2.0",
	"configurations": [
		{
			"name": "[MIKO] Web",
			"type": "node",
			"request": "launch",
			"protocol": "inspector",
			"console": "integratedTerminal",
			"restart": true,
			"program": "${workspaceFolder}/apps/web/lib",
			"stopOnEntry": false,
			"sourceMaps": false,
			"env": {
				"NODE_ENV": "development",
				"DEBUG": "nuxt:*"
			}
		},
		{
			"name": "[MIKO] API",
			"type": "node",
			"request": "launch",
			"protocol": "inspector",
			"restart": true,
			"program": "${workspaceFolder}/apps/api/lib",
			"env": {
				"NODE_ENV": "development",
				"DEBUG": "nuxt:*"
			}
		}
	],
	"compounds": [
		{
			"name": "[MIKO] Project",
			"preLaunchTask": "npm: watch",
			"configurations": [
				"[MIKO] Web",
				"[MIKO] API"
			]
		}
	]
}
