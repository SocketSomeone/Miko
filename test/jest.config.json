{
	"preset": "ts-jest",
	"name": "miko-monorepo",
	"rootDir": "../",
	"clearMocks": true,
	"coverageDirectory": "coverage",
	"collectCoverageFrom": [
		"{apps,packages}/*/src/**/*.ts"
	],
	"coveragePathIgnorePatterns": [
		"/node_modules/",
		"types\\.ts",
		"index\\.ts",
		".+\\.d\\.ts"
	],
	"testMatch": [
		"**/{apps,packages}/*/test/**/*.test.ts"
	],
	"moduleFileExtensions": [
		"ts",
		"tsx",
		"json",
		"js"
	],
	"setupFilesAfterEnv": [
		"<rootDir>/test/jest.setup.ts"
	],
	"testEnvironment": "node",
	"transform": {
		"^.+\\.tsx?$": "ts-jest"
	},
	"roots": [
		"<rootDir>/apps/",
		"<rootDir>/packages/"
	],
	"moduleNameMapper": {
		"@miko/common/(.*)": "<rootDir>/packages/common/src/$1",
		"@miko/common": "<rootDir>/packages/common/src",
		"@miko/framework/(.*)": "<rootDir>/packages/framework/src/$1",
		"@miko/framework": "<rootDir>/packages/framework/src"
	},
	"verbose": true
}
