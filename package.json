{
	"private": true,
	"name": "miko-monorepo",
	"description": "",
	"workspaces": [
		"apps/*",
		"packages/*",
		"tools/*"
	],
	"scripts": {
		"build": "yarn run clean && tsc --build ./typescript/tsconfig.project.json",
		"start": "pm2 start ./miko.config.yml",
		"clean": "rimraf -rf ./{apps,packages,tools}/*/{lib,*.tsbuildinfo}",
		"test": "yarn run lint && jest --no-cache --passWithNoTests --config test/jest.config.json",
		"test:inspect": "yarn lint && node --inspect-brk ./node_modules/jest/bin/jest.js --runInBand --config test/jest.config.json",
		"test:coverage": "jest --config test/jest.config.json --coverage",
		"lint": "eslint --ignore-path .gitignore {apps,packages,tools}/*/src/**/*.ts",
		"lint:fix": "eslint --fix --ignore-path .gitignore {apps,packages,tools}/*/src/**/*.ts",
		"update:tsconfig": "ts-node scripts/update-package-tsconfig.ts",
		"update:version": "lerna version --no-push --no-changelog"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/SocketSomeone/Miko.git"
	},
	"keywords": [
		"discord",
		"discord-js",
		"react",
		"nodejs",
		"javascript",
		"typescript",
		"typeorm",
		"rabbitmq",
		"postgresql",
		"nestjs-backend"
	],
	"engines": {
		"node": ">=12.0.0"
	},
	"author": {
		"email": "socket.someone@gmail.com",
		"name": "Alex | someone#6191",
		"url": "https://github.com/SocketSomeone"
	},
	"license": "MIT",
	"bugs": {
		"email": "socket.someone@gmail.com",
		"url": "https://github.com/SocketSomeone/Miko/issues"
	},
	"homepage": "https://mikoapp.xyz/",
	"config": {
		"commitizen": {
			"path": "./node_modules/cz-lerna-changelog"
		}
	},
	"husky": {
		"hooks": {
			"pre-push": "yarn run test"
		}
	},
	"devDependencies": {
		"@sentry/node": "6.2.0",
		"@types/jest": "26.0.20",
		"@types/node": "14.14.31",
		"@typescript-eslint/eslint-plugin": "4.15.1",
		"@typescript-eslint/parser": "4.15.1",
		"cz-lerna-changelog": "2.0.3",
		"eslint": "7.20.0",
		"eslint-config-airbnb-base": "14.2.1",
		"eslint-config-prettier": "7.2.0",
		"eslint-plugin-import": "2.22.1",
		"eslint-plugin-prettier": "3.3.1",
		"husky": "4",
		"jest": "26.6.3",
		"lerna": "3.22.1",
		"prettier": "2.2.1",
		"ts-jest": "26.5.1",
		"ts-node": "9.1.1",
		"typescript": "4.1.5"
	},
	"dependencies": {
		"reflect-metadata": "0.1.13",
		"tslib": "2.1.0",
		"tslog": "3.1.1",
		"tsyringe": "4.4.0"
	}
}
